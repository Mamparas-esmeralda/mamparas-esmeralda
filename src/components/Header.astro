---
import IconClose from "./icons/IconClose.astro";
import IconMenu from "./icons/IconMenu.astro";
---

<header class="fixed top-0 w-full bg-white">
  <div
    class="relative px-[var(--px-sm)] flex justify-between items-center w-full"
  >
    <div>
      <img src="/public/images/logo.png" class="max-h-[10vh]" alt="" />
    </div>
    <div class="cursor-pointer sm:hidden transition-[0.5s]" id="menu-icon">
      <div id="open">
        <IconMenu />
      </div>
      <div id="close" class="hidden">
        <IconClose />
      </div>
    </div>
    <div
      class="translate-x-full absolute top-[100%] transition-[0.5s] right-0 w-full h-screen bg-black z-50"
      id="menu"
    >
    </div>
  </div>
</header>

<script>
  const menuIcon = document.getElementById("menu-icon");
  const close = document.getElementById("close");
  const open = document.getElementById("open");
  const menu = document.getElementById("menu");

  menuIcon.addEventListener("click", () => {
    menu.classList.toggle("translate-x-full");
    close.classList.toggle("hidden");
    open.classList.toggle("hidden");
  });
</script>
